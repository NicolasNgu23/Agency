// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  imageUrl    String?
  status      String  @default("Termin√©")
  startDate   DateTime?
  endDate     DateTime?
  category    String
  technologies Json?   // Utiliser JSON pour stocker les technologies
  link        String?
  slug        String  @unique
}


model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}


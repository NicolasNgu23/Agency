// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  name        String
  description String
  imageUrl    String?
  status      String      @default("Termin√©")
  startDate   DateTime?
  endDate     DateTime?
  category    String
  technologies String[]
  link        String?
  slug        String      @unique
}
